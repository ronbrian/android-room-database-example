<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ron.mytodo.uis.AddTaskActivity">
    <TextView

        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:padding="1dp"
        android:text=""
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="653dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="16dp"/>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="630dp">

            <EditText
                android:id="@+id/editTextTask"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:hint="Task" />

            <EditText
                android:id="@+id/editTextDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint=" Description " />

            <EditText
                android:id="@+id/editTextFinishBy"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Finish By ? " />

            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:visibility="gone"
                tools:ignore="Deprecated" />


            <AutoCompleteTextView
                android:id="@+id/places"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="74dp"
                android:layout_marginRight="74dp"
                android:hint="From" />

            <AutoCompleteTextView
                android:id="@+id/places2"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/places"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="74dp"
                android:layout_marginRight="74dp"
                android:hint="To"/>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="317dp"
                android:layout_below="@+id/places2"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="13dp"

                android:layout_marginBottom="170dp"
                tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:background="@color/colorAccent"
                android:text="Save"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                />


            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="27dp"
                android:layout_marginRight="27dp"
                android:rotation="90"
                app:srcCompat="@drawable/black_dot" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                app:srcCompat="@drawable/dotted" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="36dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                app:srcCompat="@drawable/location_black" />


        </RelativeLayout>



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="155dp"
        android:visibility="gone"
         />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/layout1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-95dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView

            android:id="@+id/textViewStatus"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:text="From :"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/textViewStatus2"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:text="To :"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Distance : "
            android:textColor="@color/backgroundBlack" />

    </LinearLayout>

</RelativeLayout>