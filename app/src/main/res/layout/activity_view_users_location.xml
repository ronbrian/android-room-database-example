<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ron.mytodo.uis.viewUsersLocation">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="0dp"
        android:layout_marginBottom="239dp"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="-95dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/rounded_corner2"
        android:orientation="vertical"
        android:padding="1dp">


        <TextView

            android:id="@+id/textViewUsername"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="191dp"
            android:layout_marginRight="191dp"
            android:layout_marginBottom="0dp"
            android:lineSpacingExtra="16sp"
            android:padding="1dp"
            android:text="Username"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#353b50"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLocation"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"

            android:layout_marginStart="36dp"
            android:layout_marginTop="-2dp"

            android:layout_marginRight="194dp"
            android:lineSpacingExtra="16sp"
            android:padding="5dp"
            android:text="Distance "
            android:textColor="#353b50"
            android:textSize="13sp" />

        <TextView

            android:id="@+id/textViewLocation"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewUsername"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:lineSpacingExtra="16sp"
            android:padding="1dp"
            android:text="Location"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#353b50"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/buttonDirection"
            android:layout_width="wrap_content"

            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="3dp"
            app:srcCompat="@drawable/directions_black" />


    </RelativeLayout>


</RelativeLayout>
